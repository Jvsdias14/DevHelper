@page
@model DevHelper.Razor.Pages.PgProblema.IndexModel

@{
    ViewData["Title"] = "Feed";
}

<h1>Feed</h1>

<table class="table">
    <thead>
    <tr>
    <th>
    Usuário
    @* @Html.DisplayNameFor(model => model.Problema[0].Usuario) *@
    </th>
    <th>
    Nome do problema
    @* @Html.DisplayNameFor(model => model.Problema[0].Nome) *@
    </th>
    <th>
    Descrição
    @* @Html.DisplayNameFor(model => model.Problema[0].Descricao) *@
    </th>
    <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Problema)
        {
            <tr>
                <td>
                    <label class="clickable-label" data-url="@Url.Page("/PgCadUsuario/Details", new { Id = item.Usuario.Id })">
                        @Html.DisplayFor(modelItem => item.Usuario.Nome)
                    </label>
                </td>
                <td>
                    <label class="clickable-label" data-url="@Url.Page("/PgProblema/Details", new { Id = item.Id })">
                        @Html.DisplayFor(modelItem => item.Nome)
                    </label>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.querySelectorAll('.clickable-label').forEach(label => {
            label.addEventListener('click', function () {
                window.location.href = this.dataset.url;
            });
        });
    </script>
}


