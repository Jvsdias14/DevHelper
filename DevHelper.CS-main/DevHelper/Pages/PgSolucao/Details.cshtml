@page
@model DevHelper.Razor.Pages.PgSolucao.DetailsModel

@{
    ViewData["Title"] = "Detalhes da Solução";
}

<h1>Detalhes da Solução</h1>
<hr />
<div>
    <h4>@Html.DisplayFor(model => model.Problema.Nome)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Solucao.Descricao)
        </dd>
        <dt class="col-sm-2">
            Problema
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Problema.Nome)
        </dd>
        <dt class="col-sm-2">
            Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nome)
        </dd>
    </dl>
</div>

<div class="d-flex justify-content-center align-items-center mt-4">
    <a asp-page="/PgSolucao/Edit" asp-route-id="@Model.Solucao.Id" class="btn btn-custom">Editar</a>
</div>

<style>
    .btn.btn-custom {
        background-color: #22ffb6;
        color: #000;
        border: none;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px 20px;
        margin: 5px;
    }

        .btn.btn-custom:hover {
            background-color: #1ccc9a;
            color: #fff;
        }

    .text-custom {
        color: #22ffb6;
    }

    .d-flex {
        display: flex;
    }

    .justify-content-between {
        justify-content: space-between;
    }

    .align-items-center {
        align-items: center;
    }
</style>
